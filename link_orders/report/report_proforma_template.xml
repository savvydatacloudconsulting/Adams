<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="action_report_proforma" model="ir.actions.report">
        <field name="name">Pro-Forma Invoice</field>
        <field name="model">sale.order</field> <!-- or your model -->
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">link_orders.report_custom_proforma_document</field>
        <field name="report_file">link_orders.report_custom_proforma_document</field>
        <field name="print_report_name">'Pro-Forma - %s' % (object.name or '')</field>
        <field name="binding_model_id" ref="model_sale_order"/>
        <field name="binding_type">report</field>
        <field name="paperformat_id" ref="paperformat_euro_bank_statement"/>
    </record>





   <record id="paperformat_euro_bank_statement" model="report.paperformat">
            <field name="name">Pro Forma Invoice</field>
            <field name="default" eval="True" />
            <field name="format">A4</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">20</field>
            <field name="margin_bottom">20</field>
            <field name="margin_left">0</field>
            <field name="margin_right">0</field>
            <field name="header_line" eval="False" />
            <field name="header_spacing">35</field>
            <field name="dpi">90</field>
            <field name="css_margins" eval="True" />
        </record>

</odoo>
