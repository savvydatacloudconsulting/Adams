<odoo>
    <template id="closing_stock">
        <t t-call="link_orders.custom_external_layout_standard">
            <main class="page">
                <t t-foreach="docs" t-as="o">
          
                    <center><h1>CLOSING STOCK</h1></center>
                    <br/>

                    <table class="table table-sm" style="width: 100%; border: 2px solid black; border-collapse: collapse;">
                        <thead style="background-color: #C4D7E9;">
                            <tr>
                                <th style="border: 2px solid black; padding:10px;">Sr No.</th>
                                <th style="border: 2px solid black; padding:10px;">Product Name</th>
                                <th style="border: 2px solid black; padding:10px;">Batch No.</th>
                                <th style="border: 2px solid black; padding:10px;">Product Date</th>
                                <th style="border: 2px solid black; padding:10px;">Expiry Date</th>
                                <th style="border: 2px solid black; padding:10px;">On Hand</th>
                                <th style="border: 2px solid black; padding:10px;">Forecasting</th>
                                <th style="border: 2px solid black; padding:10px;">IN Qty</th>
                                <th style="border: 2px solid black; padding:10px;">Out Qty</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-set="sn" t-value="1"/>
                            <t t-foreach="docs" t-as="product">
                                <tr>
                                    <td style="border: 2px solid black; padding:8px;">
                                        <t t-esc="sn"/>
                                        <t t-set="sn" t-value="sn + 1"/>
                                    </td>
                                    <td style="border: 2px solid black; padding:8px;"><t t-esc="product.display_name"/></td>
                                    <td style="border: 2px solid black; padding:8px;">
                                        <!-- <t t-esc="product.x_batch_no"/> -->
                                    </td>
                                    <td style="border: 2px solid black; padding:8px;">
                                        <!-- <t t-if="product.x_product_date">
                                            
                                            <t t-esc="product.x_product_date.strftime('%d/%m/%Y')"/>
                                        </t> -->
                                    </td>
                                    <td style="border: 2px solid black; padding:8px;">
                                        <!-- <t t-if="product.x_expiry_date">
                                            
                                            <t t-esc="product.x_expiry_date.strftime('%d/%m/%Y')"/>
                                        </t> -->
                                    </td>
                                    <td style="border: 2px solid black; padding:8px;"><t t-esc="product.qty_available"/></td>
                                    <td style="border: 2px solid black; padding:8px;"><t t-esc="product.virtual_available"/></td>
                                    <td style="border: 2px solid black; padding:8px;"><t t-esc="product.incoming_qty"/></td>
                                    <td style="border: 2px solid black; padding:8px;"><t t-esc="product.outgoing_qty"/></td>
                                </tr>
                            </t>
                        </tbody>
                    </table>


                   
                </t>
            </main>
        </t>
    </template>
</odoo>
