<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_custom_proforma_document" inherit_id="sale.report_saleorder_pro_forma">
        <xpath expr="." position="replace">
            <t t-call="link_orders.custom_external_layout_standard">

                <main>
                    <t t-foreach="docs" t-as="o">

                    
                       <div class="page" style="color: black;">
                <!-- Consignee + PI Info -->


            <div style="width: 100%; ">
                <div style="display: inline-block; vertical-align: top; width: 50%;">
                    <table style="border-collapse: collapse; border: 1px solid black; width: 95%;">
                                <tr>
                                    <th style="padding: 5px; text-align: center; background-color: #C4D7E9;">Consignee Details</th>
                                </tr>
                                <tr><td style="padding: 5px; border: 1px solid black;"><strong><t t-esc="o.partner_id.name"/></strong></td></tr>
                                <tr>
                                    <td style="padding: 5px; border: 1px solid black;">
                                        <t t-if="o.partner_id.street"><t t-esc="o.partner_id.street"/></t>
                                        <t t-if="o.partner_id.street2">, <t t-esc="o.partner_id.street2"/></t>
                                        <t t-if="o.partner_id.city">, <t t-esc="o.partner_id.city"/></t>
                                        <t t-if="o.partner_id.state_id">, <t t-esc="o.partner_id.state_id.name"/></t>
                                        <t t-if="o.partner_id.zip">, <t t-esc="o.partner_id.zip"/></t>
                                        <t t-if="o.partner_id.country_id">, <t t-esc="o.partner_id.country_id.name"/></t>
                                    </td>
                                </tr>
                                <tr><td style="padding: 5px; border: 1px solid black;"><strong>Email:</strong> <t t-esc="o.partner_id.email"/></td></tr>
                                <tr><td style="padding: 5px; border: 1px solid black;"><strong>Mob:</strong> <t t-esc="o.partner_id.phone"/></td></tr>
                            </table>
                </div>
                <div style="display: inline-block; vertical-align: top; width: 40%; margin-left:8%;">
                     <table style="border-collapse: collapse; border: 1px solid black; width: 95%;">
                                <tr><td style="padding: 5px; border: 1px solid black; background-color: #C4D7E9;"><strong>PI No.:</strong></td>
                                    <td style="padding: 5px; border: 1px solid black;"><t t-esc="o.name"/></td></tr>
                                <tr><td style="padding: 5px; border: 1px solid black; background-color: #C4D7E9;"><strong>Date:</strong></td>
                                    <td style="padding: 5px; border: 1px solid black;"><t t-if="o.date_order"><t t-esc="o.date_order.strftime('%d/%m/%Y')"/></t></td></tr>
                                <tr><td style="padding: 5px; border: 1px solid black; background-color: #C4D7E9;"><strong>Port Of Loading:</strong></td>
                                    <td style="padding: 5px; border: 1px solid black;"><t t-esc="o.port_of_loading"/></td></tr>
                                <tr><td style="padding: 5px; border: 1px solid black; background-color: #C4D7E9;"><strong>Destination:</strong></td>
                                    <td style="padding: 5px; border: 1px solid black;"><t t-esc="o.destination"/></td></tr>
                                <tr><td style="padding: 5px; border: 1px solid black; background-color: #C4D7E9;"><strong>Payment Term:</strong></td>
                                    <td style="padding: 5px; border: 1px solid black;"><t t-esc="o.payment_term_id.name"/></td></tr>
                                <tr><td style="padding: 5px; border: 1px solid black; background-color: #C4D7E9;"><strong>Incoterm:</strong></td>
                                    <td style="padding: 5px; border: 1px solid black;"><t t-esc="o.incoterm.name"/></td></tr>
                            </table>
                </div>
            </div>
                <br/>
                <table class="table table-sm mt-3" style="width: 100%; border: 1px solid black; border-collapse: collapse;">
                    <thead style="background-color: #C4D7E9;">
                        <tr>
                            <th style="border: 1px solid black; padding:8px; width:8%;">Sr No.</th>
                            <th style="border: 1px solid black; width:50%;">Product Description</th>
                            <th style="border: 1px solid black; width:10%;">Quantity</th>
                            <th style="border: 1px solid black; width:15%;">Unit Price</th>
                            <th style="border: 1px solid black; width:15%;">Amount</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-set="sr_no" t-value="0"/>
                        <t t-foreach="o.order_line" t-as="line">
                            <tr>
                                <td style="border: 1px solid black; padding: 10px; text-align:center;">
                                    <t t-set="sr_no" t-value="sr_no + 1"/>
                                    <t t-esc="sr_no"/>
                                </td>
                                <td style="border: 1px solid black;"><t t-esc="line.name"/></td>
                                <td style="border: 1px solid black; text-align:center;"><t t-esc="line.product_uom_qty"/></td>
                                <td style="border: 1px solid black; text-align:right;"><t t-esc="'{:,.2f}'.format(line.price_unit)"/></td>
                                <td style="border: 1px solid black; text-align:right;"><t t-esc="'{:,.2f}'.format(line.price_subtotal)"/></td>
                            </tr>
                        </t>

                        <!-- Empty Rows -->
                        <tr><td colspan="5" style="border: 1px solid black; padding:15px;"/></tr>
                        <tr><td colspan="5" style="border: 1px solid black; padding:15px;"/></tr>

                        <!-- Totals -->
                        <tr>
                            <td colspan="2" rowspan="4" style="border: 1px solid black; padding:10px; vertical-align: top;">
                                <strong>Amount in Words</strong><br/>
                                <span><t t-esc="o.currency_id.amount_to_text(o.amount_total)"/></span>
                            </td>
                            <td style="border: 1px solid black; padding:25px 5px;"><strong>Sub Total</strong></td>
                            <td colspan="2" style="border: 1px solid black; padding:10px; text-align:right;">
                                <t t-esc="o.currency_id.name"/> <t t-esc="'{:,.2f}'.format(o.amount_untaxed)"/>
                            </td>
                        </tr>

                        <t t-set="taxes" t-value="set()"/>
                        <t t-foreach="o.order_line" t-as="line">
                            <t t-foreach="line.tax_id" t-as="tax">
                                <t t-set="taxes" t-value="taxes.union(set([tax]))"/>
                            </t>
                        </t>

                        <t t-foreach="taxes" t-as="tax">
                            <tr>
                                <td style="border: 1px solid black; padding:15px;"><strong>VAT %</strong></td>
                                <td colspan="2" style="border: 1px solid black; padding:10px; text-align:right;">
                                    <t t-esc="o.currency_id.name"/> <t t-esc="'{:,.2f}'.format(o.amount_tax)"/>
                                </td>
                            </tr>
                        </t>

                        <tr>
                            <td style="border: 1px solid black; padding:10px;"><strong>Total Amount</strong></td>
                            <td colspan="2" style="border: 1px solid black; padding:10px; text-align:right;">
                                <t t-esc="o.currency_id.name"/> <t t-esc="'{:,.2f}'.format(o.amount_total)"/>
                            </td>
                        </tr>
                    </tbody>
                </table>

<table class="table table-sm mt-4" style="width: 100%; border: 1px solid black; border-collapse: collapse;">
    <tbody>
        <!-- Shipping Document -->
        <tr>
            <td style="border: 1px solid black; width: 25%; padding: 7px;"><strong>Shipping Document :</strong></td>
            <td style="border: 1px solid black; padding:7px;"><t t-esc="o.shipping_document"/></td>
        </tr>

        <!-- Delivery Date -->
        <tr>
            <td style="border: 1px solid black; padding:7px;"><strong>Delivery Date :</strong></td>
            <td style="border: 1px solid black; padding:7px;">
                <t t-if="o.commitment_date"><t t-esc="o.commitment_date.strftime('%B - %Y')"/></t>
            </td>
        </tr>

        <!-- Notes -->
        <tr>
            <td style="border: 1px solid black; padding: 7px;"><strong>Notes :</strong></td>
            <td style="border: 1px solid black; padding: 5px;">
                <t t-if="o.note_1">
                    <p style="margin-bottom: 13px; margin-top:1%;"><t t-esc="o.note_1"/></p>
                </t>
                <t t-if="o.milk_origin">
                    <span style="display: block; border-bottom: 1px solid black;"/>
                    <p style="margin-bottom: 8px; margin-top:1%;">Milk Origin :<t t-esc="o.milk_origin"/></p>
                </t>
                <t t-if="o.note_2">
                    <span style="display: block; border-bottom: 1px solid black;"/>
                    <p style="margin-bottom: 8px;"><t t-esc="o.note_2"/></p>
                </t>
                <t t-if="o.note_3">
                    <span style="display: block; border-bottom: 1px solid black;"/>
                    <p style="margin-bottom: 8px;"><t t-esc="o.note_3"/></p>
                </t>
                <t t-if="o.note_4">
                    <span style="display: block; border-bottom: 1px solid black;"/>
                    <p style="margin-bottom: 8px;"><t t-esc="o.note_4"/></p>
                </t>
                <t t-if="o.note_5">
                    <span style="display: block; border-bottom: 1px solid black;"/>
                    <p style="margin-bottom: 8px;"><t t-esc="o.note_5"/></p>
                </t>
            </td>
        </tr>
    </tbody>
</table>



            <div style="width: 100%; ">
                <div style="display: inline-block; vertical-align: top; width: 50%;">
                     <div style="flex: 0 0 45%; text-align: center;">
                        <strong>FOR YOUR COMPANY NAME</strong>
                        <p style="margin-top: 30px;">Authorized Signatory</p>
                    </div>
                </div>
                <div style="display: inline-block; vertical-align: top; width: 40%; margin-left:8%;">
                    <div style="flex: 0 0 45%; text-align: center;">
                        <strong>BUYER CONFIRMATION</strong><br/>
                        <p style="margin-top: 30px;">Customer Signature</p>
                    </div>
                </div>
            </div>


               

            </div>

                    </t>
                </main>
            </t>
        </xpath>
    </template>
</odoo>
