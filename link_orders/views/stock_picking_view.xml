<odoo>
   <record id="view_picking_form_inherit_material_issue" model="ir.ui.view">
    <field name="name">stock.picking.form.inherit.material.issue</field>
    <field name="model">stock.picking</field>
    <field name="inherit_id" ref="stock.view_picking_form"/>
    <field name="arch" type="xml">
        <xpath expr="//field[@name='partner_id']" position="after">
            <field name="product_name"/>
            <field name="ordered_qty"/>
        </xpath>


        <xpath expr="//page[@name='extra']" position="after">
            <page string="Finished Goods Transfer">
                <group >
                    <group>
                        <field name="material_issue_id" invisible="1"/>
                        <field name="document_reference"/>
                        <field name="x_issue_number"/>
                        <field name="revision_no"/>
                        <field name="production_order_number"/>
                        <field name="x_requested_by" readonly="1"/>
                        <field name="is_confirmed" readonly="1"/>
                        <field name="x_issued_by" readonly="1"/>
                        <field name="x_approved_by"/>
                        <field name="is_approved" readonly="1"/>
                    </group>
                    <group>
                        
                        <field name="batch_lot_number"/>
                        <field name="x_issue_date"/>
                        <field name="x_revision_date"/>
                        <field name="pi_date"/>
                        <field name="milk_origin"/>
                        <field name="note_1"/>
                        <field name="note_2"/>
                    </group>
                </group>
            </page>
        </xpath>
          <header>
                    <button name="action_approve"
                            type="object"
                            string="Approve"
                            class="oe_highlight"/>

                    <button name="action_confirm"
                            type="object"
                            string="Confirm"
                            class="oe_highlight"/>

                </header>
    </field>
</record>

</odoo>
