<odoo>

    <record id="view_bom_form_inherit_mrp" model="ir.ui.view">
        <field name="name">mrp.bom.form.create.mrp</field>
        <field name="model">mrp.bom</field>
        <field name="inherit_id" ref="mrp.mrp_bom_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_tmpl_id']" position="before">
                <field name="x_lor_number" readonly="1"/>
                <field name="x_customer" readonly="1"/>

            </xpath>
            <xpath expr="//sheet" position="before">
                <header>
                   

                    <button name="action_approve"
                            type="object"
                            string="Approve"
                            class="oe_highlight"/>

                     <button name="action_confirm"
                            type="object"
                            string="Confirm"
                            class="oe_highlight"/>

                    <button name="action_create_material_issue"
                        type="object"
                        string="Create Material Issue"
                        class="oe_highlight"
                        icon="fa-external-link"/>
                </header>

            </xpath>
            <xpath expr="//field[@name='bom_line_ids']/list/field[@name='product_qty']" position="after">
                <!-- <field name="lot_id" widget="many2one"/> -->
<field name="location_id" widget="many2one"/>
            </xpath>
           
            <!-- INVISIBLE FIELD TO LINK MO -->
            <xpath expr="//sheet" position="inside">
                <group>
                    <field name="linked_mo_id" invisible="1"/>
                </group>
            </xpath>

            <xpath expr="//page[@name='operations']" position="after">
                <page string="List Of Raw Material" name="lor">
                    <group>
                        <group>
                            <field name="document_reference_number"/>
                            <field name="x_issue_number"/>
                            <field name="x_revision_no"/>
                            <field name="x_production_order_numer" readonly="1" />
                            <field name="linked_mo_id" invisible="1"/>
                            <field name="x_brand"/>
                            <field name="milk_origin"/>
                        </group>
                        <group>
                            <field name="x_date"/>
                            <field name="x_issue_date"/>
                            <field name="x_revision_date"/>
                            <field name="pi_order_date" readonly="1"/>
                            <field name="x_approved_by" readonly="1"/>
                            <field name="is_approved" readonly="1"/>
                            <field name="x_requested_by" readonly="1"/>
                            <field name="x_issued_by" readonly="1"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

</odoo>
