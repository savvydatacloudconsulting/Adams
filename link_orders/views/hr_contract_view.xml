<odoo>
    <record id="view_hr_contract_form_inherit_hourly_rate" model="ir.ui.view">
        <field name="name">hr.contract.form.inherit.hourly.rate</field>
        <field name="model">hr.contract</field>
        <field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='schedule_pay']" position="after">
                <field name="hourly_rate" readonly="1"/>
            </xpath>
        </field>
    </record>
   

    
</odoo>
