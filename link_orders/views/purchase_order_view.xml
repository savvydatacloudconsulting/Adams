<odoo>
    <record id="view_purchase_order_form_inherit_notes" model="ir.ui.view">
        <field name="name">purchase.order.form.inherit.notes</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <notebook position="inside">
                <page string="Extra Notes">
                    <group>
                        <group string="Terms">
                            <field name="x_payment_terms"/>
                            <field name="x_delivery_term"/>
                            <field name="x_delivery_contact"/>
                            <field name="order_type"/>
                        </group>
                        <group string="Notes">
                            <field name="x_note_1"/>
                            <field name="x_note_2"/>
                            <field name="x_note_3"/>
                            <field name="x_note_4"/>
                            <field name="x_note_5"/>
                            <field name="x_note_6"/>
                            <field name="x_note_7"/>
                           
                           
                            
                        </group>
                    </group>
                    <group>
                        <group string="Red">
                             <field name="x_note_8"/>
                            <field name="x_note_9"/>
                            <field name="x_note_10"/>
                        </group>
                        <group string="Yellow">
                            <field name="x_note_11"/>
                            <field name="x_note_12"/>
                            <field name="x_note_13"/>
                        </group>
                      
                    
                    </group>
                    <group>
                       
                        
                      <group string="Green">
                            <field name="x_note_14"/>
                            <field name="x_note_15"/>
                            <field name="x_note_16"/>
                        </group>
                    </group>
                </page>
            </notebook>
        </field>
    </record>
</odoo>
