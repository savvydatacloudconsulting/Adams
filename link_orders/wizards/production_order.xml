<?xml version="1.0"?>
<odoo>
    <data>
        <record id="view_create_mrp_wizard_form" model="ir.ui.view">
            <field name="name">create.mrp.wizard.form</field>
            <field name="model">create.mrp.wizard</field>
            <field name="arch" type="xml">
                <form string="Create MRP Orders">
                    <group>
                        <field name="sale_order_id" readonly="1"/>
                    </group>
                    <field name="product_lines">
                        <list editable="bottom">
                            <field name="select_product"/>
                            <field name="product_id"/>
                            <field name="quantity"/>
                        </list>
                    </field>
                    <footer>
                        <button string="Create Production Orders" type="object" name="action_create_mrp_orders" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

    </data>
</odoo>